<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[@class='product-content d-flex flex-row px-2 justify-content-between rounded-bottom rounded-3 flex-shrink-1']"
               position="after">
            <t t-if="pos.config.show_price">
                <div class="product-price text-primary fw-bolder mt-1" t-esc="formattedPrice"/>
            </t>
        </xpath>
    </t>
</templates>
